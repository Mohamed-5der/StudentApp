<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_above="@+id/linear2"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:src="@drawable/alsafty_logo"/>

        <TextView
            android:text="@string/welcome"
            android:layout_width="wrap_content"
            android:textSize="32dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:layout_marginTop="8dp"
            android:textColor="#6D2A8B"
            android:text="@string/missed"/>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
             android:layout_marginEnd="15dp">

            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/et_background_custom"
                android:inputType="textEmailAddress"
                android:hint="@string/email" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp">

           <EditText
              android:id="@+id/et_password"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
               android:hint="@string/password"
              android:background="@drawable/et_background_custom"
              android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

      <RelativeLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="16dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="16dp">
          <CheckBox
              android:id="@+id/chx_remember"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="14sp"
              android:layout_alignParentStart="true"
              android:text="@string/remember"/>
          <TextView
              android:id="@+id/txt_forget_pass"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/forget_pass"
              android:textSize="14sp"
              android:textColor="@color/yellow"
              android:textStyle="bold"
              android:layout_centerVertical="true"
              android:layout_alignParentEnd="true"
              />
      </RelativeLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_background_login_custom"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:text="@string/log_in"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            />

    </LinearLayout>
    <LinearLayout
         android:id="@+id/linear2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="20dp"
         android:gravity="center"
         android:orientation="horizontal">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/black"
             android:text="@string/no_account"/>
         <TextView
             android:id="@+id/txt_signUp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/sign_up"
             android:textSize="14sp"
             android:textColor="@color/yellow"/>
     </LinearLayout>
</RelativeLayout>