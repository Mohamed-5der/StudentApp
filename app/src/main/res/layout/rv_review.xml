<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/mar_rig_lift"
    android:layout_marginTop="@dimen/margin_top"
    android:layout_marginLeft="@dimen/mar_rig_lift">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp"
        android:background="@drawable/background_quiz_custom"
        android:elevation="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/review_logo"/>

        <TextView
            android:id="@+id/txt_nameReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:text="@string/review"
            android:layout_toRightOf="@+id/logo"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"

            />

        <ImageButton
            android:id="@+id/btn_Download"
            android:layout_width="54dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/rectangle2_"
            android:src="@drawable/play_for_icon" />
    </RelativeLayout>

</RelativeLayout>