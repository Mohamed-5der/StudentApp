<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/personal_photo"
    tools:context=".Onboarding_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/onboarding_shape"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="34dp"
                    android:fontFamily="@font/cairo"
                    android:text="@string/title"
                    android:textColor="#DB6521"
                    android:textSize="20dp" />

            </RelativeLayout>




                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="28dp"
                    >


                        <TextView
                            android:id="@+id/body"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/body1"
                            android:layout_centerHorizontal="true"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/middel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/body2"
                            android:layout_below="@+id/body"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/body3"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/middel"
                            android:textSize="14sp"
                            android:fontFamily="@font/cairo"
                            android:textColor="@color/black"/>

                </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginRight="71dp"
                android:layout_marginLeft="71dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_shape"
                        android:text="@string/next"
                        android:layout_marginBottom="8dp"
                        />
                    <TextView
                        android:id="@+id/skip"
                        android:layout_below="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/skip"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="32dp"
                        android:textSize="16sp"
                        android:fontFamily="@font/cairo"
                        android:textColor="@color/black"
                        android:clickable="true"
                        />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>